<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_32">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_gif_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        fresco:actualImageScaleType="fitCenter"
        fresco:placeholderImageScaleType="fitCenter" />

    <com.netease.photoview.PhotoView
        android:id="@+id/img_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_horizontal" />

    <ProgressBar
        android:id="@+id/progress_fullscreen"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_round_20dp_grey_transparent"
        android:indeterminate="false"
        android:indeterminateDrawable="@anim/anim_loading_center_small"
        android:padding="20dp"
        android:visibility="gone" />

</FrameLayout>