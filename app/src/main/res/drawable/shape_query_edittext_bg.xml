<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item android:bottom="7dp" android:left="@dimen/qua_edit_padding_left">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:bottom="7.5dp" android:left="@dimen/qua_edit_padding_left">
                <shape android:shape="rectangle">
                    <solid android:color="@color/action_bar_bg" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="7dp" android:left="@dimen/qua_edit_padding_left">
                <shape android:shape="rectangle">
                    <solid android:color="@color/green_normal" />
                </shape>
            </item>
            <item android:bottom="7.5dp" android:left="@dimen/qua_edit_padding_left">
                <shape android:shape="rectangle">
                    <solid android:color="@color/action_bar_bg" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>