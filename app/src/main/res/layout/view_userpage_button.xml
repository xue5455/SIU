<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/upf_item_height"
    android:background="@drawable/selector_common_white_grey"
    android:clickable="true"
    android:paddingLeft="@dimen/upf_button_padding"
    android:paddingRight="@dimen/upf_button_padding">

    <TextView
        android:id="@+id/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:src="@mipmap/ic_forward"
        android:layout_width="@dimen/upf_icon_size"
        android:layout_height="@dimen/upf_icon_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>