<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_chat_time" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <include layout="@layout/view_chat_portrait" />

        <include
            android:id="@+id/name_text"
            layout="@layout/view_chat_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dip" />

        <com.xue.siu.common.view.MaskableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text"
            android:layout_marginLeft="50dip"
            app:mask="@drawable/selector_byx_recv_sms"
            app:porterduffxfermode="DST_IN">

            <TextView
                android:id="@+id/msg_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green_normal"
                android:gravity="center"
                android:minHeight="40dip"
                android:minWidth="40dip"
                android:paddingBottom="5dip"
                android:paddingLeft="8dip"
                android:paddingRight="5dip"
                android:paddingTop="5dip"></TextView>
        </com.xue.siu.common.view.MaskableLayout>
    </RelativeLayout>
</LinearLayout>