<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="@dimen/default_content_padding">

    <include layout="@layout/view_news_item_header" />

    <TextView
        android:id="@+id/tv_content_news_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nf_item_inner_padding"
        android:layout_marginRight="@dimen/default_content_padding" />

    <FrameLayout
        android:id="@+id/layout_pic_news_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nf_item_inner_padding"
        android:layout_marginTop="@dimen/nf_item_views_margin"
        android:layout_marginRight="@dimen/default_content_padding"></FrameLayout>

    <include
        layout="@layout/view_location_news_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nf_item_inner_padding"
        android:layout_marginRight="@dimen/default_content_padding"
        android:layout_marginTop="@dimen/nf_item_views_margin" />

    <include
        layout="@layout/view_operate_news_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nf_item_inner_padding"
        android:layout_marginRight="@dimen/default_content_padding"
        android:layout_marginTop="@dimen/nf_item_views_margin" />

    <include
        layout="@layout/view_like_news_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nf_item_inner_padding"
        android:layout_marginRight="@dimen/default_content_padding"
        android:layout_marginTop="@dimen/nf_item_views_margin" />

    <FrameLayout
        android:id="@+id/layout_comment_news_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nf_item_inner_padding"
        android:layout_marginRight="@dimen/default_content_padding"
        android:layout_marginTop="@dimen/nf_item_views_margin"></FrameLayout>
</LinearLayout>