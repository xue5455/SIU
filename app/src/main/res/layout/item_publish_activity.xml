<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_content_publish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pa_edit_height"
        android:background="@color/transparent"
        android:gravity="left|top"
        android:hint="@string/pa_et_hint"
        android:padding="@dimen/pa_edit_padding"
        android:textColor="@color/black_alpha80"
        android:textColorHint="@color/black_alpha50"
        android:textSize="@dimen/text_size_14" />

    <com.netease.hearttouch.htswiperefreshrecyclerview.HTSwipeRecyclerView
        android:id="@+id/rv_photos_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pa_rv_pic_vertical_spacing"
        android:paddingLeft="@dimen/pa_rv_pic_horizontal_spacing"
        android:paddingTop="@dimen/pa_rv_pic_vertical_spacing"
        app:htMode="disable" />
</LinearLayout>
