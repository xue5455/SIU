<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_input_height"
    android:paddingLeft="10dip"
    android:paddingRight="10dip">

    <Button
        android:id="@+id/btn_emoji"
        android:layout_width="@dimen/chat_emoji_btn_size"
        android:layout_height="@dimen/chat_emoji_btn_size"
        android:layout_centerVertical="true"
        android:background="@drawable/message_input_emotion"/>

    <EditText
        android:id="@+id/et_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="8dip"
        android:layout_toLeftOf="@+id/btn_plus"
        android:layout_toRightOf="@+id/btn_emoji"
        android:background="@drawable/bg_chat_input"
        android:padding="2dip"/>


    <Button
        android:id="@+id/btn_plus"
        android:layout_width="@dimen/chat_emoji_btn_size"
        android:layout_height="@dimen/chat_emoji_btn_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/message_input_plus"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="@dimen/chat_emoji_btn_size"
        android:layout_height="@dimen/chat_emoji_btn_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/seletor_chat_send_btn"
        android:visibility="gone"/>

</RelativeLayout>