<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/uda_divider_height"
        android:layout_height="@dimen/uda_portrait_container_height">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_portrait"
            android:layout_width="@dimen/uda_portrait_size"
            android:layout_height="@dimen/uda_portrait_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/uda_portrait_margin_left"
            fresco:placeholderImage="@color/grey_f4"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="@dimen/uda_portrait_size" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/uda_portrait_margin_left"
            android:layout_toRightOf="@+id/sdv_portrait" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/grey_f4" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:layout_marginLeft="@dimen/default_content_padding"
        android:layout_marginRight="@dimen/default_content_padding"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn_green_bg"
        android:text="@string/uda_follow"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:layout_marginLeft="@dimen/default_content_padding"
        android:layout_marginRight="@dimen/default_content_padding"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn_green_bg"
        android:text="@string/uda_chat"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>