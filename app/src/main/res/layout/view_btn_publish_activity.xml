<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <Space
        android:layout_width="@dimen/pa_btn_complete_width"
        android:layout_height="@dimen/action_bar_height" />

    <Button
        android:id="@+id/btn_complete_publish"
        android:layout_width="@dimen/pa_btn_complete_width"
        android:layout_height="@dimen/pa_btn_complete_height"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_btn_publish"
        android:enabled="false"
        android:text="@string/pa_publish"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13" />

</RelativeLayout>