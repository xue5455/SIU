<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_toast_bg">
    <TextView android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toast_height"
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="@dimen/toast_margin"
        android:layout_marginRight="@dimen/toast_margin"/> <!--android:text="我是一个toast"-->
</LinearLayout>