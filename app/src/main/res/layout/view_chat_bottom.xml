<?xml version="1.0" encoding="utf-8"?>
<com.xue.siu.module.chat.view.EditContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <include layout="@layout/view_chat_input" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v4.view.ViewPager
            android:id="@+id/vp_emoji"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_menu_height"
            android:background="@color/black"
            android:visibility="gone" />

        <GridView
            android:id="@+id/gv_plus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_menu_height"
            android:numColumns="4"
            android:visibility="gone" />
    </FrameLayout>
</com.xue.siu.module.chat.view.EditContainer>